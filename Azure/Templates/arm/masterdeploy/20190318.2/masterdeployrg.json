{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "parametersSasToken": {
            "type": "string",
            "defaultValue": ""
        },
        "templateSasToken": {
            "type": "string",
            "defaultValue": ""
        },
        "baseParametersURL": {
            "type": "string",
            "defaultValue": ""
        },
        "deploymentRGArray": {
            "type": "array"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "apiVersion": "2018-05-01",
            "name": "start",
            "type": "Microsoft.Resources/deployments",
            "location": "canadacentral",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": []
                }
            }
        },
        {
            "name": "[parameters('deploymentRGArray')[copyIndex()].name]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[parameters('deploymentRGArray')[copyIndex()].resourceGroup]",
            "dependsOn": [
                "[if(contains(parameters('deploymentRGArray')[copyIndex()], 'dependsOn'), parameters('deploymentRGArray')[copyIndex()].dependsOn[0], 'start')]",
                "[if(contains(parameters('deploymentRGArray')[copyIndex()], 'dependsOn'), if(greater(length(parameters('deploymentRGArray')[copyIndex()].dependsOn), 1), parameters('deploymentRGArray')[copyIndex()].dependsOn[1], parameters('deploymentRGArray')[copyIndex()].dependsOn[0]), 'start')]",
                "[if(contains(parameters('deploymentRGArray')[copyIndex()], 'dependsOn'), if(greater(length(parameters('deploymentRGArray')[copyIndex()].dependsOn), 2), parameters('deploymentRGArray')[copyIndex()].dependsOn[2], parameters('deploymentRGArray')[copyIndex()].dependsOn[0]), 'start')]",
                "[if(contains(parameters('deploymentRGArray')[copyIndex()], 'dependsOn'), if(greater(length(parameters('deploymentRGArray')[copyIndex()].dependsOn), 3), parameters('deploymentRGArray')[copyIndex()].dependsOn[3], parameters('deploymentRGArray')[copyIndex()].dependsOn[0]), 'start')]"
            ],
            "copy": {
                "name": "obj",
                "count": "[length(parameters('deploymentRGArray'))]"
            },
            "properties": {
                "mode": "Incremental",
                "parametersLink": {
                    "uri": "[concat(parameters('baseParametersURL'), parameters('deploymentRGArray')[copyIndex()].parametersFile, parameters('parametersSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "templateLink": {
                    "uri": "[concat(parameters('deploymentRGArray')[copyIndex()].templateLink, parameters('templateSasToken'))]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {}
}