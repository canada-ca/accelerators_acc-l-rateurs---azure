{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerSasToken": {
            "type": "string"
        },
        "ASArray": {
            "type": "array",
            "metadata": {
                "description": "Array of Availability Set objects."
            }
        }
    },
    "variables": {
        "baseVMUrl": "[concat(uri(deployment().properties.templateLink.uri, 'availabilityset.json'), parameters('containerSasToken'))]"
    },
    "resources": [
        {
            "name": "[concat('Availabilityset-Deploy', parameters('ASArray')[copyIndex()].name)]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "resourceGroup": "[parameters('ASArray')[copyIndex()].resourceGroup]",
            "dependsOn": [],
            "copy": {
                    "name": "obj",
                    "count": "[length(parameters('ASArray'))]"
            },
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "ASObj": {
                        "value": "[parameters('ASArray')[copyIndex()]]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('baseVMUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            }  
        }
    ]
}