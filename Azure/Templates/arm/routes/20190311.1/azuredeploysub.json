{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerSasToken": {
            "type": "string",
            "defaultValue": ""
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located including a trailing '/'"
            },
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_debugLevel": {
            "type": "string",
            "defaultValue": "none"
        },
        "routeTables": {
            "type": "array",
            "metadata": {
                "description": "Array of routeTables objects."
            }
        }
    },
    "variables": {
        "baseVMUrl": "[concat(uri(parameters('_artifactsLocation'), 'routes.json'), parameters('containerSasToken'))]"
    },
    "resources": [
        {
            "name": "[concat('routeDeploy', parameters('routeTables')[copyIndex()].name)]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "resourceGroup": "[parameters('routeTables')[copyIndex()].resourceGroup]",
            "dependsOn": [],
            "copy": {
                    "name": "obj",
                    "count": "[length(parameters('routeTables'))]"
            },
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "routeTables": {
                        "value": "[parameters('routeTables')[copyIndex()]]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('baseVMUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "debugSetting": {
                    "detailLevel": "[parameters('_debugLevel')]"
                }
            }  
        }
    ],
    "outputs": {}
}