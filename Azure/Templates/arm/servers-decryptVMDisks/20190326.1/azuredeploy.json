{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerSasToken": {
            "type": "string",
            "defaultValue": ""
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located including a trailing '/'"
            },
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_debugLevel": {
            "type": "string",
            "defaultValue": "none"
        },
        "vmArray": {
            "type": "array",
            "metadata": {
                "description": "Array of VM objects."
            }
        }
    },
    "variables": {
        "baseVMUrl": "[concat(uri(parameters('_artifactsLocation'), 'decryptVMDisks.json'), parameters('containerSasToken'))]"
    },
    "resources": [
        {
            "name": "[concat('vmGroupdeploy', parameters('vmArray')[copyIndex()].vmName)]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "copy": {
                    "name": "vmObj",
                    "count": "[length(parameters('vmArray'))]"
            },
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "vmObject": { "value": "[parameters('vmArray')[copyIndex()]]" }
                },
                "templateLink": {
                    "uri": "[variables('baseVMUrl')]",
                    "contentVersion": "1.0.0.0"
                }
            }  
        }
    ],
    "outputs": {}
}